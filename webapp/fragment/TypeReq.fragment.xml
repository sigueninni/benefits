<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="typeReqDialog"
        title="{i18n>ChooseReqType}"
        type="Message"
    >
        <content>
            <VBox class="sapUiMediumMargin">
                <HBox class="sapUiSmallMarginBottom">
                    <VBox class="sapUiMediumMarginEnd">
                        <Label
                            text="{i18n>startDate}"
                            class="sapUiSmallMarginBottom"
                            required="true"
                        />
                        <DatePicker
                            id="begda"
                            placeholder="{i18n>selectStartDate}"
                            valueFormat="yyyy-MM-dd"
                            displayFormat="dd/MM/yyyy"
                            width="150px"
                            value="{typeModel>/Begda}"
                            required="true"
                            valueState="{typeModel>/startDateValueState}"
                            valueStateText="{typeModel>/startDateValueStateText}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="{i18n>endDate}"
                            class="sapUiSmallMarginBottom"
                            required="true"
                        />
                        <DatePicker
                            id="endda"
                            placeholder="{i18n>selectEndDate}"
                            valueFormat="yyyy-MM-dd"
                            displayFormat="dd/MM/yyyy"
                            width="150px"
                            value="{typeModel>/Endda}"
                            required="true"
                            valueState="{typeModel>/endDateValueState}"
                            valueStateText="{typeModel>/endDateValueStateText}"
                        />
                    </VBox>
                </HBox>

                <Label
                    text="{i18n>requestType}"
                    class="sapUiSmallMarginBottom"
                />
                <Select
                    id="requestType"
                    items="{/RequestTypeVHSet}"
                    selectedKey="{typeModel>/RequestType}"
                    change="onReqTypChange"
                >
                    <core:ListItem
                        text="{Name}"
                        key="{Id}"
                    />
                </Select>

                <RadioButtonGroup
                    id="claimAdvanceGroup"
                    visible="{= ${typeModel>/RequestType} === '01'}"
                    class="sapUiMediumMarginTop"
                    columns="2"
                    select="onClaimAdvanceChange"
                >
                    <RadioButton
                        id="isAdvance"
                        text="{i18n>isAdvance}"
                        selected="{typeModel>/Isadvance}"
                    />
                    <RadioButton
                        id="isClaim"
                        text="{i18n>isClaim}"
                        selected="{typeModel>/Isclaim}"
                    />
                </RadioButtonGroup>

                <Label
                    text="{i18n>comments}"
                    class="sapUiMediumMarginTop sapUiSmallMarginBottom"
                />
                <TextArea
                    id="requestComments"
                    value="{typeModel>/Comments}"
                    rows="3"
                    width="100%"
                    placeholder="{i18n>enterComments}"
                    maxLength="500"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>confirm}"
                press="onConfirmTypeReqButtonPress"
            />
        </beginButton>
        <endButton>
            <Button
                customData:name="_oTypeReqDialog"
                text="{i18n>cancel}"
                press="onCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
