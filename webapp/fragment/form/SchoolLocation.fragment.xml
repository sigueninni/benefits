<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
        editable="true"
    >
        <form:content>
            <core:Title text="{i18n>schoolLocationData}" />
            <!-- 
 





 -->

            <Label
                text="{i18n>school}"
                required="true"
                labelFor="school"
            />
            <Select
                id="school"
                forceSelection="false"
                items="{/SchoolSet}"
                selectedKey="{school}"
                enabled="{RequestSettings/IsFormEditable}"
                change=".onSchoolChange"
            >
                <core:Item
                    text="{Description}"
                    key="{Type}"
                />
            </Select>

            <Label
                text="{i18n>schoolName}"
                required="true"
                labelFor="schoolName"
            />
            <Input
                id="schoolName"
                type="Text"
                value="{schoolName}"
                editable="{RequestSettings/IsFormEditable}"
            />

            <Label
                text="{i18n>schoolType}"
                required="true"
                labelFor="schoolName"
            />
            <Input
                id="schoolType"
                type="Text"
                value="{schoolType}"
                editable="{RequestSettings/IsFormEditable}"
            />


<!-- Application NÂ°
Starting from 
Grade-->
          <core:Title text="" />
            <Label
                text="{i18n>schoolCountry}"
                required="true"
                labelFor="schoolName"
            />
            <Input
                id="schoolCountry"
                type="Text"
                value="{schoolCountry}"
                editable="{RequestSettings/IsFormEditable}"
            />

           <Label
                text="{i18n>schoolCity}"
                required="true"
                labelFor="schoolCity"
            />
            <Input
                id="schoolCity"
                type="Text"
                value="{schoolCity}"
                editable="{RequestSettings/IsFormEditable}"
            />

           <Label
                text="{i18n>commutingDistance}"
                required="true"
                labelFor="commutingDistance"
            />
            <Input
                id="commutingDistance"
                type="Text"
                value="{commutingDistance}"
                editable="{RequestSettings/IsFormEditable}"
            />
            

        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
