<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox>
        <Table
            id="advanceTable"
            width="100%"
            noDataText="{i18n>noAdvances}"
            mode="Delete"
            items="{
                path: 'adv>/items'
            }"
            delete="onDeleteAdvanceButtonPress"
        >
            <headerToolbar>
                <OverflowToolbar design="Transparent">
                    <content>
                        <ToolbarSpacer />
                        <Button
                            id="BTNADDADVANCE"
                            type="Default"
                            icon="sap-icon://add"
                            tooltip="{i18n>add}"
                            press="onAddAdvanceButtonPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column><Text text="{i18n>expenseType}" /></Column>
                <Column><Text text="{i18n>expenseAmount}" /></Column>
                <Column><Text text="{i18n>currency}" /></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Select 
                            selectedKey="{adv>Excos}" 
                            items="{expenseTypeModel>/items}"
                            forceSelection="false"
                            enabled="{detailView>/advanceTableEditable}"
                        >
                            <core:Item key="{expenseTypeModel>Id}" text="{expenseTypeModel>Txt}" />
                        </Select>
                        <Input 
                            type="Number" 
                            value="{adv>Examt}" 
                            enabled="{detailView>/advanceTableEditable}"
                        />
                        <Input 
                            value="{adv>Waers}" 
                            editable="false" 
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
