<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        id="advanceAddForm"
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="3"
        labelSpanM="4"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="4"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="1"
        columnsM="1"
        singleContainerFullSize="false"
    >
        <form:content>
            <core:Title text="{i18n>advanceDetails}" />
            <Label text="{i18n>expenseType}" />
            <Select 
                id="expenseTypeAdvanceAdd" 
                selectedKey="{advanceModel>/Excos}"
                items="{expenseTypeModel>/items}"
            >
                <core:Item key="{expenseTypeModel>Id}" text="{expenseTypeModel>Txt}" />
            </Select>
            <Label text="{i18n>expenseAmount}" />
            <Input id="amountAdvanceAdd" type="Number" value="{advanceModel>/Examt}" />
            <Label text="{i18n>currency}" />
            <Input 
                id="currencyAdvanceAdd" 
                type="Text"
                value="{advanceModel>/Waers}"
                editable="false"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
