<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:form="sap.ui.layout.form">

    <VBox>
        <Label text="{i18n>attachments}" class="sapUiMediumMarginBottom" />
        
        <HBox>
            <!-- Left Column -->
            <VBox class="sapUiMediumMarginEnd" width="50%">
                <!-- Pro-forma Invoice -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>proFormaInvoice}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="005"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>chooseProFormaFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '005'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Active" press="onViewAttachment">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}" />
                                </HBox>
                                <Button 
                                    icon="sap-icon://decline" 
                                    type="Transparent"
                                    press="onRemoveAttachment" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
                
                <!-- Payment Receipts -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>paymentReceipts}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="004"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>choosePaymentReceiptsFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '004'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Active" press="onViewAttachment">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}" />
                                </HBox>
                                <Button 
                                    icon="sap-icon://decline" 
                                    type="Transparent"
                                    press="onRemoveAttachment" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
                
                <!-- Teacher Diploma -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>teacherDiploma}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="010"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>chooseTeacherDiplomaFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '010'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Active" press="onViewAttachment">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}" />
                                </HBox>
                                <Button 
                                    icon="sap-icon://decline" 
                                    type="Transparent"
                                    press="onRemoveAttachment" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
            </VBox>
            
            <!-- Right Column -->
            <VBox width="50%">
                <!-- Receipts -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>receipts}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="009"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>chooseReceiptsFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '009'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Active" press="onViewAttachment">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}" />
                                </HBox>
                                <Button 
                                    icon="sap-icon://decline" 
                                    type="Transparent"
                                    press="onRemoveAttachment" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
                
                <!-- Teacher Passport/ID -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>teacherPassportId}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="011"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>choosePassportFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '011'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Active" press="onViewAttachment">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}" />
                                </HBox>
                                <Button 
                                    icon="sap-icon://decline" 
                                    type="Transparent"
                                    press="onRemoveAttachment" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
    
</core:FragmentDefinition>
