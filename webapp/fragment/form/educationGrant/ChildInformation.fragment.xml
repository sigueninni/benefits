<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <!-- Name .. -->
            <core:Title text="{i18n>childMasterData}" />

            <Button
                class="sapUiSmallMarginBottom"
                text="{i18n>selectAChild}"
                press=".selectChildPress"
            />
            <core:Title text="" />
            <core:Title text="" />
            <Label
                text="{i18n>lastName}"
                labelFor="FANAM"
            />

            <Input
                id="FANAM"
                type="Text"
                value="{ToEduGrantDetail/Fanam}"
            />

            <Label                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
                text="{i18n>birthName}"
                labelFor="FGBNA"
            />

            <Input
                id="FGBNA"
                type="Text"
                value="{ToEduGrantDetail/Fgbna}"
            />

            <Label
                text="{i18n>firstName}"
                labelFor="FAVOR"
            />

            <Input
                id="FAVOR"
                type="Text"
                value="{ToEduGrantDetail/Favor}"
            />

            <!-- Age .. -->
            <core:Title text="" />
            <Label
                text="{i18n>dateOfBirth}"
                labelFor="FGBDT"
            />
            <DatePicker
                id="FGBDT"
                value="{ path: 'ToEduGrantDetail/Fgbdt', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy', UTC: true }}"
            />

            <Label
                text="{i18n>Nationality}"
                labelFor="FANAT"
            />

            <Input
                id="FANAT"
                type="Text"
                value="{ToEduGrantDetail/Fanat}"
            />

            <Label
                text="{i18n>gender}"
                labelFor="FASEX"
            />

            <Input
                id="FASEX"
                type="Text"
                value="{ToEduGrantDetail/Fasex}"
            />

            <!-- Technical Fields -->
            <core:Title text="{i18n>childIndormationtechnicalFields}" />

            <Label
                text="{i18n>egNumber}"
                labelFor="EXMNR"
            />

            <Input
                id="EXMNR"
                type="Text"
                value="{JobGroup}"
            />

            <Label
                text="{i18n>itRecordNumber}"
                labelFor="SEQNR"
            />

            <Input
                id="SEQNR"
                type="Text"
                value="{JobGroup}"
            />

            <core:Title text="" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
