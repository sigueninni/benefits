<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox>
        <Table
            id="claimTable"
            width="100%"
            noDataText="{i18n>noClaims}"
            mode="Delete"
            items="{clm>/items}"
            delete="onDeleteClaimButtonPress"
        >
            <headerToolbar>
                <OverflowToolbar design="Transparent">
                    <content>
                        <ToolbarSpacer />
                        <Button
                            id="BTNADDCLAIM"
                            type="Default"
                            icon="sap-icon://add"
                            enabled="{RequestSettings/IsFormEditable}"
                            tooltip="{i18n>add}"
                            press="onAddClaimButtonPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column><Text text="{i18n>expenseType}" /></Column>
                <Column><Text text="{i18n>expenseAmount}" /></Column>
                <Column><Text text="{i18n>advanceAmount}" /></Column>
                <Column><Text text="{i18n>currency}" /></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{clm>Excos}" />
                        <ObjectNumber number="{clm>ExamtE}" />
                        <ObjectNumber number="{clm>Examt}" />
                        <Text text="{clm>Waers}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
