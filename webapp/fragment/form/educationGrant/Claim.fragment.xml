<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox>
        <Table
            id="claimTable"
            width="100%"
            noDataText="{i18n>noClaims}"
            mode="Delete"
            items="{localClaims>/claims}"
            delete="onDeleteClaimButtonPress"
        >
            <headerToolbar>
                <OverflowToolbar design="Transparent">
                    <content>
                        <ToolbarSpacer />
                        <Button
                            type="Default"
                            icon="sap-icon://add"
                            enabled="{RequestSettings/IsFormEditable}"
                            tooltip="{i18n>add}"
                            press="onAddClaimButtonPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column><Text text="{i18n>expenseType}" /></Column>
                <Column><Text text="{i18n>expenseAmount}" /></Column>
                <Column><Text text="{i18n>advanceAmount}" /></Column>
                <Column><Text text="{i18n>currency}" /></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{localClaims>ExpenseType}" />
                        <ObjectNumber number="{localClaims>ExpenseAmount}" />
                        <ObjectNumber number="{localClaims>AdvanceAmount}" />
                        <Text text="{localClaims>Currency}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
