<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox>
        <Table
            id="claimTable"
            width="100%"
            noDataText="{i18n>noClaims}"
            mode="Delete"
            items="{clm>/items}"
            delete="onDeleteClaimButtonPress"
        >
            <headerToolbar>
                <OverflowToolbar design="Transparent">
                    <content>
                        <ToolbarSpacer />
                        <Button
                            id="BTNADDCLAIM"
                            type="Default"
                            text="{i18n>addExpense}"
                            icon="sap-icon://add"
                            iconFirst="false"
                            tooltip="{i18n>add}"
                            press="onAddClaimButtonPress"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column><Text text="{i18n>expenseType}" /></Column>
                <Column><Text text="{i18n>expenseAmount}" /></Column>
                <Column><Text text="{i18n>advanceAmount}" /></Column>
                <Column><Text text="{i18n>currency}" /></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Select 
                            selectedKey="{clm>Excos}" 
                            items="{expenseTypeModel>/items}"
                            forceSelection="false"
                            enabled="{detailView>/claimTableEditable}"
                        >
                            <core:Item key="{expenseTypeModel>Id}" text="{expenseTypeModel>Txt}" />
                        </Select>
                        <Input 
                            type="Number" 
                            value="{clm>ExamtE}" 
                            enabled="{detailView>/claimTableEditable}"
                        />
                        <Input 
                            type="Number" 
                            value="{clm>Examt}" 
                            editable="false" 
                        />
                        <Input 
                            value="{clm>Waers}" 
                            editable="false" 
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
