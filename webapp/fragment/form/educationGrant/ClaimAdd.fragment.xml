<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        id="claimAddForm"
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="3"
        labelSpanM="4"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="4"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="1"
        columnsM="1"
        singleContainerFullSize="false"
    >
        <form:content>
            <core:Title text="{i18n>claimDetails}" />
            <Label text="{i18n>expenseType}" />
            <Select 
                id="expenseTypeAdd" 
                selectedKey="{claimModel>/ExpenseType}"
                items="{expenseTypeModel>/items}"
            >
                <core:Item key="{expenseTypeModel>Id}" text="{expenseTypeModel>Txt}" />
            </Select>
            <Label text="{i18n>expenseAmount}" />
            <Input id="expenseAmountAdd" type="Number" value="{claimModel>/ExpenseAmount}" />
            <Label text="{i18n>advanceAmount}" />
            <Input id="advanceAmountAdd" type="Number" value="{claimModel>/AdvanceAmount}" editable="false" enabled="false" />
            <Label text="{i18n>currency}" />
            <Input 
                id="currencyAdd" 
                type="Text"
                value="{claimModel>/Currency}"
                editable="false"
                enabled="false"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
