<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="3"
        columnsL="3"
        columnsM="3"
    >
        <form:content>
            <!-- Eligibility core Fields -->
            <core:Title text="{i18n>eligibilitySubtab}" />

            <Label text="{i18n>dependencyStatus}" />
            <Select
                id="KDGBR"
                forceSelection="true"
                selectedKey="{ToEduGrantDetail/Kdgbr}"
            >
                <!--               items="{
                        path : '/GenericVHSet',
                        filters : [
                            { path : 'Method', operator : 'EQ', value1 :'GET_DEPENDENCY_STATUS_LIST' }
                        ]
                        }" -->
                <core:Item
                    text="{i18n>notDependent}"
                    key=""
                />

                <core:Item
                    text="{i18n>Dependent}"
                    key="X"
                />
            </Select>
            <Label text="{i18n>computedAge}" />
            <Input
                id="EGAGE"
                type="Number"
                value="{ToEduGrantDetail/Egage}"
            />
            <Label text="{i18n>egSystemStatus}" />
            <Select 
                id="EGSST"
                selectedKey="{ToEduGrantDetail/Egsst}"
            >
                <core:Item
                    key=""
                    text="{i18n>eligible}"
                />
                <core:Item
                    key="2"
                    text="{i18n>notEligible}"
                />
            </Select>
            <Label text="{i18n>egCustomerStatus}" />
            <Select
                id="EGCST"
                forceSelection="false"
                selectedKey="{ToEduGrantDetail/Egcst}"
            >
                <core:Item
                    text="{i18n>notEligible}"
                    key=""
                />

                <core:Item
                    text="{i18n>Eligible}"
                    key="X"
                />
                <!--       items="{
                        path : '/GenericVHSet',
                        filters : [
                            { path : 'Method', operator : 'EQ', value1 :'GET_EG_CUSTOMER_STATUS_LIST' }
                        ]
                        }"
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                /> -->
            </Select>
            <Label text="{i18n>specialEducationGrant}" />
            <Switch
                id="EGDIS"
                state="{ToEduGrantDetail/Egdis}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>specialArrangement}" />
            <Select
                id="EGSAR"
                forceSelection="false"
                items="{
                        path : '/GenericVHSet',
                        filters : [
                            { path : 'Method', operator : 'EQ', value1 :'GET_SPECIAL_ARRANGEMENT_LIST' }
                        ]
                        }"
                selectedKey="{ToEduGrantDetail/Egsar}"
                visible="{ToEduGrantDetail/Egdis}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <!--  -->
            <Label text="{i18n>changeReason}" />
            <!--     <Select  forceSelection="false"
                items="{/ChangeReasonVHSet}"
            > -->
            <Select
                id="EGCRS"
                forceSelection="false"
                items="{
                                        path : '/GenericVHSet',
                                        filters : [
                                            { path : 'Method', operator : 'EQ', value1 :'GET_CHANGE_REASON_LIST' }
                                        ]
                                        }"
                selectedKey="{ToEduGrantDetail/Egcrs}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>dutyStationSM}" />
            <Input
                id="DSTAT"
                type="Text"
                value="{ToEduGrantDetail/Dstat}"
                description="{ToEduGrantDetail/DstatTxt}"
                showValueHelp="true"
            />
            <Label text="{i18n>designatedDS}" />
            <Switch
                id="EGDDS"
                state="{ToEduGrantDetail/Egdds}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>nationalitySM}" />
            <Input
                id="NATIO"
                type="Text"
                value="{ToEduGrantDetail/Natio}"
                description="{ToEduGrantDetail/NatioTxt}"
                showValueHelp="true"
            />
            <Label text="{i18n>contractType}" />
            <Input
                id="CTTYP"
                type="Text"
                value="{ToEduGrantDetail/Cttyp}"
                description="{ToEduGrantDetail/CttypTxt}"
            />
            <Label text="{i18n>validTo}" />
            <DatePicker
                id="CTEDT"
                value="{ path: 'ToEduGrantDetail/Ctedt', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy', UTC: true }}"
            />

            <!-- Attendance Fields -->
            <core:Title text="{i18n>attendanceSubtab}" />
            <Label text="{i18n>prorationFactor}" />
            <Input
                id="EGFAC"
                type="Number"
                value="{ToEduGrantDetail/Egfac}"
            />
            <Label text="{i18n>changeProrationFactor}" />
            <CheckBox
                id="EGPRO"
                selected="{ToEduGrantDetail/Egpro}"
            />
            <Label text="{i18n>overrideProrationFactor}" />
            <CheckBox
                id="EGOPR"
                selected="{ToEduGrantDetail/Egopr}"
            />

            <!-- Entitlment Fields -->
            <core:Title text="{i18n>entitlementSubtab}" />
            <Label text="{i18n>currency}" />
            <Input
                id="EGCUR"
                type="Text"
                value="{ToEduGrantDetail/Egcur}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onCurrencyValueHelpPress"
            />
            <Label text="{i18n>eligibilityBoarding}" />
            <Switch
                id="EGC01"
                state="{ToEduGrantDetail/Egc01}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>reasonBoarding}" />
            <Select
                id="EGBRS"
                forceSelection="false"
                selectedKey="{ToEduGrantDetail/Egbrs}"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_REASON_BOARDING_LIST' }
                    ]
                    }"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>boardingProrationFactor}" />
            <Input
                id="EGBPR"
                type="Number"
                value="{ToEduGrantDetail/Egbpr}"
            />
            <Label text="{i18n>overrideBoardProration}" />
            <CheckBox
                id="EGBROVR"
                selected="{ToEduGrantDetail/Egbrovr}"
            />
            <Label text="{i18n>overrideCAFProration}" />
            <CheckBox
                id="EGCAFPRO"
                selected="{ToEduGrantDetail/Egcafpro}"
            />
            <Label text="{i18n>multipleAttendance}" />
            <Select
                id="EGMUL"
                forceSelection="false"
                selectedKey="{ToEduGrantDetail/Egmul}"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_MULTIPLE_ATTENDANCE_LIST' }
                    ]
                    }"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>applyTwoThirdRule}" />
            <CheckBox
                id="EGRUL"
                selected="{ToEduGrantDetail/Egrul}"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
