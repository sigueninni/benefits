<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
        editable="true"
    >
        <form:content>
            <core:Title text="{i18n>eligibilityData}" />
            <!-- Colonne 1: Statuts et éducation spéciale -->
            <Label
                text="{i18n>egSystemStatus}"
                required="true"
                labelFor="egSystemStatus"
            />
            <Input
                id="egSystemStatus"
                type="Text"
                value="{egSystemStatus}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>egCustomerStatus}"
                required="true"
                labelFor="egCustomerStatus"
            />
            <Input
                id="egCustomerStatus"
                type="Text"
                value="{egCustomerStatus}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>specialEducationGrant}"
                labelFor="specialEducationGrant"
            />
            <Input
                id="specialEducationGrant"
                type="Text"
                value="{specialEducationGrant}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>specialArrangement}"
                labelFor="specialArrangement"
            />
            <Input
                id="specialArrangement"
                type="Text"
                value="{specialArrangement}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <core:Title text="{i18n>eligibilityLocation}" />
            <!-- Colonne 2: Localisation et contrat -->
            <Label
                text="{i18n>changeReason}"
                labelFor="changeReason"
            />
            <Input
                id="changeReason"
                type="Text"
                value="{changeReason}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>dutyStationSM}"
                labelFor="dutyStationSM"
            />
            <Input
                id="dutyStationSM"
                type="Text"
                value="{dutyStationSM}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>designatedDS}"
                labelFor="designatedDS"
            />
            <Input
                id="designatedDS"
                type="Text"
                value="{designatedDS}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>nationalitySM}"
                labelFor="nationalitySM"
            />
            <Input
                id="nationalitySM"
                type="Text"
                value="{nationalitySM}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>contractType}"
                labelFor="contractType"
            />
            <Input
                id="contractType"
                type="Text"
                value="{contractType}"
                editable="{RequestSettings/IsFormEditable}"
            />
            <Label
                text="{i18n>validTo}"
                labelFor="validTo"
            />
            <DatePicker
                id="validTo"
                value="{validTo}"
                editable="{RequestSettings/IsFormEditable}"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
