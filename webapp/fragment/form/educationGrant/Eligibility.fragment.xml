<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="3"
        columnsL="3"
        columnsM="3"
    >
        <form:content>
            <!-- Eligibility core Fields -->
            <core:Title text="{i18n>eligibilitySubtab}" />
            <Label text="{i18n>dependencyStatus}" />
            <Select id="KDGBR">
                <core:Item
                    key="1"
                    text="{i18n>eligible}"
                />
                <core:Item
                    key="2"
                    text="{i18n>notEligible}"
                />
            </Select>
            <Label text="{i18n>computedAge}" />
            <Input
                id="EGAGE"
                type="Number"
                value="{ToEduGrantDetail/Egage}"
            />
            <Label text="{i18n>egSystemStatus}" />
            <Select id="EGSST">
                <core:Item
                    key="1"
                    text="{i18n>active}"
                />
                <core:Item
                    key="2"
                    text="{i18n>inactive}"
                />
            </Select>
            <Label text="{i18n>egCustomerStatus}" />
            <Select
                id="EGCST"
                forceSelection="false"
                items="{
                                        path : '/GenericVHSet',
                                        filters : [
                                            { path : 'Method', operator : 'EQ', value1 :'GET_EG_CUSTOMER_STATUS_LIST' }
                                        ]
                                        }"
                selectedKey="{ContractType}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>specialEducationGrant}" />
            <Switch
                id="EGDIS"
                state="false"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>specialArrangement}" />
            <Input
                id="specialArrangement"
                type="Text"
                value=""
            />
            <Label text="{i18n>changeReason}" />
            <!--     <Select  forceSelection="false"
                items="{/ChangeReasonVHSet}"
                selectedKey="{ContractType}"
                enabled="{RequestSettings/IsFormEditable}"
            > -->
            <Select
                id="EGCRS"
                forceSelection="false"
                items="{
                                        path : '/GenericVHSet',
                                        filters : [
                                            { path : 'Method', operator : 'EQ', value1 :'GET_CHANGE_REASON_LIST' }
                                        ]
                                        }"
                selectedKey="{ReqType}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>dutyStationSM}" />
            <Input
                id="DSTAT"
                type="Text"
                value=""
                showValueHelp="true"
            />
            <Label text="{i18n>designatedDS}" />
            <Switch
                id="EGDDS"
                state="false"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>nationalitySM}" />
            <Input
                id="NATIO"
                type="Text"
                value=""
                showValueHelp="true"
            />
            <Label text="{i18n>contractType}" />
            <Input
                id="CTTYP"
                type="Text"
                value=""
            />
            <Label text="{i18n>validTo}" />
            <DatePicker
                id="CTEDT"
                value=""
            />

            <!-- Attendance Fields -->
            <core:Title text="{i18n>attendanceSubtab}" />
            <Label text="{i18n>prorationFactor}" />
            <Input
                id="EGFAC"
                type="Number"
                value=""
            />
            <Label text="{i18n>changeProrationFactor}" />
            <CheckBox
                id="EGPRO"
                selected="false"
            />
            <Label text="{i18n>overrideProrationFactor}" />
            <CheckBox
                id="EGOPR"
                selected="false"
            />

            <!-- Entitlment Fields -->
            <core:Title text="{i18n>entitlementSubtab}" />
            <Label text="{i18n>currency}" />
            <Input
                id="EGCUR"
                type="Text"
                value=""
                showValueHelp="true"
            />
            <Label text="{i18n>eligibilityBoarding}" />
            <Switch
                id="EGC01"
                state="false"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label text="{i18n>reasonBoarding}" />
            <Select
                id="EGBRS"
                forceSelection="false"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_REASON_BOARDING_LIST' }
                    ]
                    }"
                selectedKey="{ContractType}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label text="{i18n>boardingProrationFactor}" />
            <Input
                id="boardingProrationFactor"
                type="Text"
                value=""
            />
            <Label text="{i18n>overrideBoardProration}" />
            <CheckBox
                id="overrideBoardProration"
                selected="false"
            />
            <Label text="{i18n>overrideCAFProration}" />
            <CheckBox
                id="overrideCAFProration"
                selected="false"
            />
            <Label text="{i18n>multipleAttendance}" />
            <CheckBox
                id="multipleAttendance"
                selected="false"
            />
            <Label text="{i18n>applyTwoThirdRule}" />
            <CheckBox
                id="applyTwoThirdRule"
                selected="false"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
