<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <core:Title text="{i18n>othersData}" />
          
            <Label text="{i18n>currencyOfPayment}" labelFor="TEXT1"/>
            <Input 
                id="TEXT1" 
                type="Text"
                value="{ToEduGrantDetail/Text1}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onCurrencyValueHelpPress"
            />

            <Label text="{i18n>comments}" labelFor="comments"/>
            <TextArea id="comments" value="{ToEduGrantDetail/Text2}" rows="3"/>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
