<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
        editable="true"
    >
        <form:content>
            <core:Title text="{i18n>schoolLocationData}" />
            <!-- 
 





 -->

            <Label
                text="{i18n>school}"
                required="true"
                labelFor="school"
            />
            <Select
                id="school"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_LIST' }
                    ]
                    }"
                selectedKey="{ContractType}"
                enabled="{RequestSettings/IsFormEditable}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <Label
                text="{i18n>schoolName}"
                required="true"
                labelFor="schoolName"
            />
            <Input
                id="schoolName"
                type="Text"
                value="{schoolName}"
                editable="{RequestSettings/IsFormEditable}"
            />

            <Label
                text="{i18n>schoolType}"
                required="true"
                labelFor="schoolType"
            />

            <Select
                id="schoolType"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_TYPE_LIST' }
                    ]
                    }"
                selectedKey="{ContractType}"
                enabled="{RequestSettings/IsFormEditable}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <core:Title text="{i18n>schoolLocationAdditional}" />
            <Label
                text="{i18n>firstPostSecondaryDegree}"
                labelFor="firstPostSecondaryDegree"
            />
            <Switch
                id="firstPostSecondaryDegree"
                state="false"
                customTextOn="Yes"
                customTextOff="No"
                enabled="true"
            />
            <Label
                text="{i18n>yearOfEntryPostSecondary}"
                labelFor="yearOfEntryPostSecondary"
            />
            <Input
                id="yearOfEntryPostSecondary"
                type="Text"
                value=""
                editable="true"
            />
            <Label
                text="{i18n>grade}"
                labelFor="grade"
            />
            <Select
                id="grade"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_ATTEND_SCHOOL_GRADE_LIST' }
                    ]
                    }"
                selectedKey="{ContractType}"
                enabled="{RequestSettings/IsFormEditable}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label
                text="{i18n>typeOfAttendance}"
                labelFor="typeOfAttendance"
            />
            <Input
                id="typeOfAttendance"
                type="Text"
                value=""
                editable="true"
            />

            <!-- Application NÂ°
Starting from 
Grade-->
            <core:Title text="" />
            <Label
                text="{i18n>schoolCountry}"
                required="true"
                labelFor="schoolName"
            />

            <Select
                id="schoolCountry"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_COUNTRY_LIST' }
                    ]
                    }"
                selectedKey="{ContractType}"
                enabled="{RequestSettings/IsFormEditable}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <Label
                text="{i18n>schoolCity}"
                required="true"
                labelFor="schoolCity"
            />
            <Input
                id="schoolCity"
                type="Text"
                value="{schoolCity}"
                editable="{RequestSettings/IsFormEditable}"
            />

            <Label
                text="{i18n>commutingDistance}"
                required="true"
                labelFor="commutingDistance"
            />
            <Switch
                id="commutingDistance"
                state="false"
                customTextOn="Yes"
                customTextOff="No"
                enabled="true"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
