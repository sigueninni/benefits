<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <core:Title text="{i18n>schoolLocationData}" />
            <!-- 
 





 -->

            <Label
                text="{i18n>school}"
                labelFor="EGSSL"
            />
            <Select
                id="EGSSL"
                items="{schoolListModel>/items}"
                selectedKey="{ToEduGrantDetail/Egssl}"
                forceSelection="false"
                change="onSchoolChange"
            >
                <!-- Empty option -->
                <core:Item
                    key=""
                    text=""
                />
                <core:Item
                    text="{schoolListModel>Txt}"
                    key="{schoolListModel>Id}"
                />
            </Select>

            <Label
                text="{i18n>schoolName}"
                labelFor="EGSNA"
            />
            <Input
                id="EGSNA"
                type="Text"
                value="{ToEduGrantDetail/Egsna}"
            />

            <Label
                text="{i18n>type}"
                labelFor="EGSTY"
            />

            <Select
                id="EGSTY"
                items="{schoolTypeModel>/items}"
                selectedKey="{ToEduGrantDetail/Egsty}"
                forceSelection="false"
            >
                <core:Item
                    text="{schoolTypeModel>Txt}"
                    key="{schoolTypeModel>Id}"
                />
            </Select>

            <core:Title text="{i18n>schoolLocationAdditional}" />
            <Label
                text="{i18n>schoolType}"
                labelFor="EGTYP"
            />
            <Select
                id="EGTYP"
                items="{schoolTypeAdditModel>/items}"
                selectedKey="{ToEduGrantDetail/Egtyp}"
                forceSelection="false"
                change="onSchoolTypeChange"
            >
                <core:Item
                    text="{schoolTypeAdditModel>Txt}"
                    key="{schoolTypeAdditModel>Id}"
                />
            </Select>
            <Label
                text="{i18n>firstPostSecondaryDegree}"
                labelFor="EGFPDA"
            />
            <Switch
                id="EGFPDA"
                state="{ToEduGrantDetail/Egfpda}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label
                text="{i18n>yearOfEntryPostSecondary}"
                labelFor="YYPSYEAR"
            />
            <Input
                id="YYPSYEAR"
                type="Number"
                value="{ToEduGrantDetail/YyPsYear}"
                maxLength="4"
                placeholder="YYYY"
                width="6rem"
            />
            <Label
                text="{i18n>grade}"
                labelFor="EGGRD"
            />
            <Select
                id="EGGRD"
                items="{gradeModel>/items}"
                selectedKey="{ToEduGrantDetail/Eggrd}"
            >
                <core:Item
                    text="{gradeModel>Txt}"
                    key="{gradeModel>Id}"
                />
            </Select>
            <Label
                text="{i18n>typeOfAttendance}"
                labelFor="EGTYPATT"
            />
            <Select
                id="EGTYPATT"
                items="{attendanceTypeModel>/items}"
                selectedKey="{ToEduGrantDetail/Egtypatt}"
                forceSelection="false"
            >
                <core:Item
                    text="{attendanceTypeModel>Txt}"
                    key="{attendanceTypeModel>Id}"
                />
            </Select>

            <!-- Application NÂ°
Starting from 
Grade-->
            <core:Title text="" />
            <Label
                text="{i18n>schoolCountry}"
                required="true"
                labelFor="EGSCT"
            />

            <!--             <Select
                id="EGSCT"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_COUNTRY_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egsct}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select> -->

            <Input
                id="EGSCT"
                type="Text"
                value="{ToEduGrantDetail/Egsct}"
                description="{ToEduGrantDetail/EgsctTxt}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onSchoolCountryValueHelpPress"
            />

            <Label
                text="{i18n>schoolCity}"
                labelFor="ORT01"
            />
            <Input
                id="ORT01"
                type="Text"
                value="{ToEduGrantDetail/Ort01}"
            />

            <Label
                text="{i18n>commutingDistance}"
                labelFor="EGCDF"
            />
            <Switch
                id="EGCDF"
                state="{ToEduGrantDetail/Egcdf}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />

            <Label
                text="{i18n>tuitionCurrency}"
                labelFor="TUITION_WAERS"
            />
            <Input
                id="TUITION_WAERS"
                type="Text"
                value="{ToEduGrantDetail/TuitionWaers}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onCurrencyValueHelpPress"
            />

            <!-- Child Boarder - Display only for children enrolled in primary or secondary school (EGTYP = 0002 or 0003) -->
            <Label
                text="{i18n>childBoarder}"
                labelFor="EGCHBRD"
                visible="{= ${ToEduGrantDetail/Egtyp} === '0002' || ${ToEduGrantDetail/Egtyp} === '0003'}"
            />
            <Switch
                id="EGCHBRD"
                state="{ToEduGrantDetail/Egchbrd}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
                visible="{= ${ToEduGrantDetail/Egtyp} === '0002' || ${ToEduGrantDetail/Egtyp} === '0003'}"
            />

            <!-- Application Number - Hidden/Commented out
            <Label
                text="{i18n>applicationNumber}"
                labelFor="EGYEA"
            />
            <Input
                id="EGYEA"
                type="Text"
                value=""
                editable="true"
            />
            -->

            <Label
                text="{i18n>startingFrom}"
                labelFor="EGYFR"
            />
            <DatePicker
                id="EGYFR"
                value="{ path: 'ToEduGrantDetail/Egyfr', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
            />

            <Label
                text="{i18n>upTo}"
                labelFor="EGYTO"
            />
            <DatePicker
                id="EGYTO"
                value="{ path: 'ToEduGrantDetail/Egyto', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
