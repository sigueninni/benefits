<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <core:Title text="{i18n>schoolLocationData}" />
            <!-- 
 





 -->

            <Label
                text="{i18n>school}"
                labelFor="EGSSL"
            />
            <Select
                id="EGSSL"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egssl}"
                forceSelection="false"
                change="onSchoolChange"
            >
                <!-- Empty option -->
                <core:Item
                    key=""
                    text=""
                />
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <Label
                text="{i18n>schoolName}"
                labelFor="EGSNA"
            />
            <Input
                id="EGSNA"
                type="Text"
                value="{ToEduGrantDetail/Egsna}"
            />

            <Label
                text="{i18n>schoolType}"
                labelFor="EGSTY"
            />

            <Select
                id="EGSTY"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_TYPE_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egsty}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <core:Title text="{i18n>schoolLocationAdditional}" />
            <Label
                text="{i18n>firstPostSecondaryDegree}"
                labelFor="EGFPDA"
            />
            <Switch
                id="EGFPDA"
                state="{ToEduGrantDetail/Egfpda}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />
            <Label
                text="{i18n>yearOfEntryPostSecondary}"
                labelFor="YYPSYEAR"
            />
            <Input
                id="YYPSYEAR"
                type="Number"
                value="{ToEduGrantDetail/YyPsYear}"
                maxLength="4"
                placeholder="YYYY"
            />
            <Label
                text="{i18n>grade}"
                labelFor="EGTYPATT"
            />
            <Select
                id="EGTYPATT"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_ATTEND_SCHOOL_GRADE_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egtypatt}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label
                text="{i18n>typeOfAttendance}"
                labelFor="typeOfAttendance"
            />
            <Select
                id="typeOfAttendance"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_TYPE_OF_ATTENDANCE_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/TypeOfAttendance}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <!-- Application NÂ°
Starting from 
Grade-->
            <core:Title text="" />
            <Label
                text="{i18n>schoolCountry}"
                required="true"
                labelFor="EGSCT"
            />

            <!--             <Select
                id="EGSCT"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_COUNTRY_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egsct}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select> -->

            <Input
                id="EGSCT"
                type="Text"
                value="{ToEduGrantDetail/Egsct}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onSchoolCountryValueHelpPress"
            />

            <Label
                text="{i18n>schoolCity}"
                labelFor="ORT01"
            />
            <Input
                id="ORT01"
                type="Text"
                value="{ToEduGrantDetail/Ort01}"
            />

            <Label
                text="{i18n>commutingDistance}"
                labelFor="EGCDF"
            />
            <Switch
                id="EGCDF"
                state="{ToEduGrantDetail/Egcdf}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />

            <Label
                text="{i18n>tuitionCurrency}"
                labelFor="WAERS"
            />
            <Input
                id="WAERS"
                type="Text"
                value="{ToEduGrantDetail/TuitionWaers}"
                showValueHelp="true"
            />

            <Label
                text="{i18n>childBoarder}"
                labelFor="EGCHBRD"
            />
            <Switch
                id="EGCHBRD"
                state="{ToEduGrantDetail/Egchbrd}"
                customTextOn="{i18n>yes}"
                customTextOff="{i18n>no}"
            />

            <!-- Application Number - Hidden/Commented out
            <Label
                text="{i18n>applicationNumber}"
                labelFor="EGYEA"
            />
            <Input
                id="EGYEA"
                type="Text"
                value=""
                editable="true"
            />
            -->

            <Label
                text="{i18n>startingFrom}"
                labelFor="EGYFR"
            />
            <DatePicker
                id="EGYFR"
                value="{ path: 'ToEduGrantDetail/EGYFR', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
            />

            <Label
                text="{i18n>upTo}"
                labelFor="EGYTO"
            />
            <DatePicker
                id="EGYTO"
                value="{ path: 'ToEduGrantDetail/EGYTO', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
