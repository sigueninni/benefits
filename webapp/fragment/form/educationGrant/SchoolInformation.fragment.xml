<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <core:Title text="{i18n>schoolLocationData}" />
            <!-- 
 





 -->

            <Label
                text="{i18n>school}"
                required="false"
                labelFor="EGSSL"
            />
            <Select
                id="EGSSL"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egssl}"
                enabled="{RequestSettings/IsFormEditable}"
                forceSelection="false"
                change="onSchoolChange"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <Label
                text="{i18n>schoolName}"
                required="true"
                labelFor="EGSNA"
            />
            <Input
                id="EGSNA"
                type="Text"
                value="{ToEduGrantDetail/Egsna}"
                editable="{RequestSettings/IsFormEditable}"
            />

            <Label
                text="{i18n>schoolType}"
                required="true"
                labelFor="EGSTY"
            />

            <Select
                id="EGSTY"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_TYPE_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egsty}"
                enabled="{RequestSettings/IsFormEditable}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>

            <core:Title text="{i18n>schoolLocationAdditional}" />
            <Label
                text="{i18n>firstPostSecondaryDegree}"
                labelFor="firstPostSecondaryDegree"
            />
            <Switch
                id="firstPostSecondaryDegree"
                state="false"
                customTextOn="Yes"
                customTextOff="No"
                enabled="true"
            />
            <Label
                text="{i18n>yearOfEntryPostSecondary}"
                labelFor="yearOfEntryPostSecondary"
            />
            <Input
                id="yearOfEntryPostSecondary"
                type="Text"
                value=""
                editable="true"
            />
            <Label
                text="{i18n>grade}"
                labelFor="EGGRD"
            />
            <Select
                id="EGGRD"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_ATTEND_SCHOOL_GRADE_LIST' }
                    ]
                    }"
                enabled="{RequestSettings/IsFormEditable}"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select>
            <Label
                text="{i18n>typeOfAttendance}"
                labelFor="typeOfAttendance"
            />
            <Input
                id="typeOfAttendance"
                type="Text"
                value=""
                editable="true"
            />

            <!-- Application NÂ°
Starting from 
Grade-->
            <core:Title text="" />
            <Label
                text="{i18n>schoolCountry}"
                required="true"
                labelFor="EGSCT"
            />

<!--             <Select
                id="EGSCT"
                items="{
                    path : '/GenericVHSet',
                    filters : [
                        { path : 'Method', operator : 'EQ', value1 :'GET_SCHOOL_COUNTRY_LIST' }
                    ]
                    }"
                selectedKey="{ToEduGrantDetail/Egsct}"
                enabled="{RequestSettings/IsFormEditable}"
                forceSelection="false"
            >
                <core:Item
                    text="{Txt}"
                    key="{Id}"
                />
            </Select> -->

            <Input
                id="EGSCT"
                type="Text"
                value="{ToEduGrantDetail/Egsct}"
                showValueHelp="true"
                valueHelpOnly="true"
                valueHelpRequest="onSchoolCountryValueHelpPress"               
            />

            <Label
                text="{i18n>schoolCity}"
                required="true"
                labelFor="ORT01"
            />
            <Input
                id="ORT01"
                type="Text"
                value="{ToEduGrantDetail/Ort01}"
                editable="{RequestSettings/IsFormEditable}"
            />

            <Label
                text="{i18n>commutingDistance}"
                required="true"
                labelFor="EGCDF"
            />
            <Switch
                id="EGCDF"
                state="false"
                customTextOn="Yes"
                customTextOff="No"
                enabled="true"
            />

            <Label
                text="{i18n>tuitionCurrency}"
                labelFor="WAERS"
            />
            <Input
                id="WAERS"
                type="Text"
                value=""
                editable="true"
                showValueHelp="true"
            />

            <Label
                text="{i18n>childBoarder}"
                labelFor="childBoarder"
            />
            <Switch
                id="childBoarder"
                state="false"
                customTextOn="Yes"
                customTextOff="No"
                enabled="true"
            />

            <Label
                text="{i18n>applicationNumber}"
                labelFor="EGYEA"
            />
            <Input
                id="EGYEA"
                type="Text"
                value=""
                editable="true"
            />

            <Label
                text="{i18n>startingFrom}"
                labelFor="EGYFR"
            />
            <DatePicker
                id="EGYFR"
                value="{ path: 'Begda', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
                editable="true"
            />

            <Label
                text="{i18n>upTo}"
                labelFor="EGYTO"
            />
            <DatePicker
                id="EGYTO"
                value="{ path: 'Endda', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, relative: false, pattern: 'dd/MM/yyyy' }}"
                editable="true"
            />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
