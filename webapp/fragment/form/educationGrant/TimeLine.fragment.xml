<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:c="sap.suite.ui.commons"
    
>
    <c:Timeline
        id="idTimelineObject"
        enableDoubleSided="true"
        growingThreshold="0"
        sortOldestFirst="true"
        content="{/RequestHistoryAndComentsSet}"
        enableScroll="false"
        showHeaderBar="false"
        	lazyLoading="true"
			textHeight="automatic"
    >
        <c:content>
            <c:TimelineItem
                dateTime="{Date}"
                title="{ActorTxt}"
                userNameClickable="true"
                userPicture="{Photo}"
                text="{Coment}"
                userName="{
                    parts: [
                        'FirstName',
                        'LastName'
                    ],
                    formatter: '.formatter.formatFullName'
                }"
                icon="{Icon}"
                filterValue="{ActorTxt}"
                maxCharacters="100"
            />

        </c:content>
    </c:Timeline>

</core:FragmentDefinition>
