<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
   layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <!-- Additional Fields (SAP) -->
          

            <Label text="{i18n>sharedRent}" />
            <Switch id="RSSCR" state="{ToRentalSubsidyDetail/Rsscr}" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>periodConsumptionYears}" />
            <Input id="DSYRS" type="Number" value="{ToRentalSubsidyDetail/Dsyrs}" />

            <Label text="{i18n>periodConsumptionMonths}" />
            <Input id="DSMNT" type="Number" value="{ToRentalSubsidyDetail/Dsmnt}" />

            <Label text="{i18n>periodConsumptionDays}" />
            <Input id="DSDAY" type="Number" value="{ToRentalSubsidyDetail/Dsday}" />

            <Label text="{i18n>lwopCalendarDays}" />
            <Input id="DSCLWOP" type="Number" value="{ToRentalSubsidyDetail/Dsclwop}" />

            <!-- Additional Fields not in SAP -->
            <!-- <core:Title text="{i18n>householdInfo}" /> -->

            <Label text="{i18n>spouseResidingAtDS}" />
            <Switch id="YRSSPOUSERES" state="{ToRentalSubsidyDetail/Yrsspouseres}" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>spouseReceivesSubsidy}" />
            <Switch id="YRSSPOUSEREC" state="{ToRentalSubsidyDetail/Yrsspouserec}" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>childrenResidingAtDS}" />
            <Switch id="YRSCHILDRES" state="{ToRentalSubsidyDetail/Yrschildres}" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
