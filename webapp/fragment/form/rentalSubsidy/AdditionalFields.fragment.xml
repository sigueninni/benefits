<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
   layout="ResponsiveGridLayout"
        labelSpanXL="4"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="2"
        columnsL="2"
        columnsM="2"
    >
        <form:content>
            <!-- Additional Fields (SAP) -->
            <core:Title text="{i18n>additionalFields}" />

            <Label text="{i18n>sharedRent}" />
            <Switch id="RSSCR" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>periodConsumptionYears}" />
            <Input id="DSYRS" type="Number" />

            <Label text="{i18n>periodConsumptionMonths}" />
            <Input id="DSMNT" type="Number" />

            <Label text="{i18n>periodConsumptionDays}" />
            <Input id="DSDAY" type="Number" />

            <Label text="{i18n>lwopCalendarDays}" />
            <Input id="DSCLWOP" type="Number" />

            <!-- Additional Fields not in SAP -->
            <core:Title text="{i18n>householdInfo}" />

            <Label text="{i18n>spouseResidingAtDS}" />
            <Switch id="spouseResidingAtDS" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>spouseReceivesSubsidy}" />
            <Switch id="spouseReceivesSubsidy" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>childrenResidingAtDS}" />
            <Switch id="childrenResidingAtDS" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
