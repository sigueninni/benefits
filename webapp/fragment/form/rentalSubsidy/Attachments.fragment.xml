<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:form="sap.ui.layout.form">

    <VBox>
        <Label text="{i18n>attachments}" class="sapUiMediumMarginBottom" />
        
        <HBox>
            <!-- Left Column -->
            <VBox class="sapUiMediumMarginEnd" width="50%">
                <!-- Copy of signed lease agreement (001) -->
                <VBox class="sapUiSmallMarginBottom">
                    <Label text="{i18n>signedLeaseAgreement}" class="sapUiSmallMarginBottom" />
                    <u:FileUploader
                        id="001"
                        multiple="true"
                        change="onAttachmentFileChange"
                        fileType="pdf,jpg,jpeg,png"
                        maximumFileSize="5"
                        buttonText="{i18n>selectFiles}"
                        placeholder="{i18n>chooseSignedLeaseFiles}"
                    />
                    <List
                        items="{
                            path: 'attachments>/items',
                            filters: [
                                {path: 'AttType', operator: 'EQ', value1: '001'},
                                {path: 'toDelete', operator: 'NE', value1: true}
                            ]
                        }"
                        noDataText="{i18n>noFilesAttached}"
                        class="sapUiSmallMarginTop">
                        <CustomListItem type="Inactive">
                            <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                                <HBox alignItems="Center">
                                    <core:Icon src="sap-icon://document" class="sapUiTinyMarginEnd" />
                                    <Text text="{attachments>Filename}.{attachments>Fileext}" />
                                </HBox>
                                <FlexBox>
                                    <Button 
                                        icon="sap-icon://show" 
                                        type="Transparent"
                                        tooltip="{i18n>viewFile}"
                                        press="onViewAttachment" />
                                    <Button 
                                        id="BTNDEL001"
                                        icon="sap-icon://delete" 
                                        type="Transparent"
                                        tooltip="{i18n>deleteFile}"
                                        press="onRemoveAttachment"
                                        visible="{attachments>/canDelete001}" />
                                </FlexBox>
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
                
                <!-- Proof of payment of first month of rent (002) -->
