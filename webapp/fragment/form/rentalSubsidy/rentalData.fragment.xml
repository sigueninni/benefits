<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="2"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="3"
        columnsL="3"
        columnsM="3"
        editable="true"
    >
        <form:content>
            <!-- Rental Subsidy Fields -->
            <core:Title text="{i18n>rentalSubsidy}" />

            <Label text="{i18n>applicationReason}" />
            <Select id="PREAS" />

            <Label text="{i18n>dwellingRentType}" />
            <Select id="RSDRT" />

            <Label text="{i18n>reimbursementApplicationType}" />
            <Select id="RSREA" />

            <Label text="{i18n>wageType}" />
            <Select id="LGART" />

            <Label text="{i18n>operationIndicator}" />
            <Select id="OPKEN" />

            <Label text="{i18n>amount}" />
            <Input id="BETRG" type="Number" />

            <Label text="{i18n>currency}" />
            <Select id="WAERS" />

            <Label text="{i18n>fixedValueOverwriting}" />
            <Input id="RSAMT" type="Number" />

            <Label text="{i18n>currencyWage}" />
            <Select id="WAAMT" />

            <Label text="{i18n>brokersFeeAmount}" />
            <Input id="RSBFA" type="Number" />

            <Label text="{i18n>currencyKey}" />
            <Select id="WABFA" />

            <Label text="{i18n>brokersFeePayDate}" />
            <DatePicker id="RSFMD" />

            <Label text="{i18n>dutyStation}" />
            <Input id="DSTXT" type="Text" showValueHelp="true" />

            <Label text="{i18n>arrivalDateDutyStation}" />
            <DatePicker id="RSADT" />

            <Label text="{i18n>rentalSubsidyExpiryDate}" />
            <DatePicker id="RSEXD" />

            <Label text="{i18n>rentalSubsidyLeaseBeginDate}" />
            <DatePicker id="RSLBD" />

            <Label text="{i18n>rentalSubsidyLeaseEndDate}" />
            <DatePicker id="RSLED" />

            <Label text="{i18n>totalDependents}" />
            <Input id="RSDEP" type="Number" />

            <Label text="{i18n>dependentsAway}" />
            <Input id="RSDAS" type="Number" />

            <Label text="{i18n>electricityFlag}" />
            <Switch id="RSEIC" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>numberOfBedrooms}" />
            <Input id="RSNBR" type="Number" />

            <!-- Additional Fields -->
            <core:Title text="{i18n>additionalFields}" />

            <Label text="{i18n>sharedRent}" />
            <Switch id="RSSCR" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>periodConsumptionYears}" />
            <Input id="DSYRS" type="Number" />

            <Label text="{i18n>periodConsumptionMonths}" />
            <Input id="DSMNT" type="Number" />

            <Label text="{i18n>periodConsumptionDays}" />
            <Input id="DSDAY" type="Number" />

            <Label text="{i18n>lwopCalendarDays}" />
            <Input id="DSCLWOP" type="Number" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
