<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <form:SimpleForm
        layout="ResponsiveGridLayout"
        labelSpanXL="2"
        labelSpanL="4"
        labelSpanM="12"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="0"
        emptySpanL="0"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="3"
        columnsL="3"
        columnsM="3"
        editable="true"
    >
        <form:content>
            <!-- Rental Subsidy Fields -->
            <core:Title text="{i18n>rentalSubsidy}" />

            <Label text="{i18n>applicationReason}" />
            <Select id="rental_PREAS" />

            <Label text="{i18n>dwellingRentType}" />
            <Select id="rental_RSDRT" />

            <Label text="{i18n>reimbursementApplicationType}" />
            <Select id="rental_RSREA" />

            <Label text="{i18n>wageType}" />
            <Select id="rental_LGART" />

            <Label text="{i18n>operationIndicator}" />
            <Select id="rental_OPKEN" />

            <Label text="{i18n>amount}" />
            <Input id="rental_BETRG" type="Number" />

            <Label text="{i18n>currency}" />
            <Select id="rental_WAERS" />

            <Label text="{i18n>fixedValueOverwriting}" />
            <Input id="rental_RSAMT" type="Number" />

            <Label text="{i18n>currencyWage}" />
            <Select id="rental_WAAMT" />

            <Label text="{i18n>brokersFeeAmount}" />
            <Input id="rental_RSBFA" type="Number" />

            <Label text="{i18n>currencyKey}" />
            <Select id="rental_WABFA" />

            <Label text="{i18n>brokersFeePayDate}" />
            <DatePicker id="rental_RSFMD" />

            <Label text="{i18n>dutyStation}" />
            <Input id="rental_DSTXT" type="Text" showValueHelp="true" />

            <Label text="{i18n>arrivalDateDutyStation}" />
            <DatePicker id="rental_RSADT" />

            <Label text="{i18n>rentalSubsidyExpiryDate}" />
            <DatePicker id="rental_RSEXD" />

            <Label text="{i18n>rentalSubsidyLeaseBeginDate}" />
            <DatePicker id="rental_RSLBD" />

            <Label text="{i18n>rentalSubsidyLeaseEndDate}" />
            <DatePicker id="rental_RSLED" />

            <Label text="{i18n>totalDependents}" />
            <Input id="rental_RSDEP" type="Number" />

            <Label text="{i18n>dependentsAway}" />
            <Input id="rental_RSDAS" type="Number" />

            <Label text="{i18n>electricityFlag}" />
            <Switch id="rental_RSEIC" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>numberOfBedrooms}" />
            <Input id="rental_RSNBR" type="Number" />

            <!-- Additional Fields -->
            <core:Title text="{i18n>additionalFields}" />

            <Label text="{i18n>sharedRent}" />
            <Switch id="rental_RSSCR" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" enabled="true" />

            <Label text="{i18n>periodConsumptionYears}" />
            <Input id="rental_DSYRS" type="Number" />

            <Label text="{i18n>periodConsumptionMonths}" />
            <Input id="rental_DSMNT" type="Number" />

            <Label text="{i18n>periodConsumptionDays}" />
            <Input id="rental_DSDAY" type="Number" />

            <Label text="{i18n>lwopCalendarDays}" />
            <Input id="rental_DSCLWOP" type="Number" />
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>
